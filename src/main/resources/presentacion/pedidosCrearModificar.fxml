<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentacion.PedidosCrearModificarController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox spacing="16.0">
               <children>
                  <Label fx:id="txtFPedido" maxWidth="1.7976931348623157E308" text="Fecha pedido:" HBox.hgrow="ALWAYS" />
                  <DatePicker fx:id="dateFechaPedido" />
               </children>
               <padding>
                  <Insets bottom="16.0" top="16.0" />
               </padding>
            </HBox>
            <HBox spacing="16.0">
               <children>
                  <Label fx:id="txtFLlegada" maxWidth="1.7976931348623157E308" text="Fecha de llegada:" HBox.hgrow="ALWAYS" />
                  <DatePicker fx:id="dateFechaLlegada" />
               </children>
               <padding>
                  <Insets bottom="16.0" top="16.0" />
               </padding>
            </HBox>
            <HBox spacing="16.0">
               <children>
                  <Label fx:id="txtFEnvio" maxWidth="1.7976931348623157E308" text="Fecha de envio:" HBox.hgrow="ALWAYS" />
                  <DatePicker fx:id="dateFechaEnvio" />
               </children>
               <padding>
                  <Insets bottom="16.0" top="16.0" />
               </padding>
            </HBox>
            <HBox spacing="16.0">
               <children>
                  <Label fx:id="txtEmailCliente" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Email cliente:" />
                  <ComboBox fx:id="comboEmailCliente" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="16.0" top="16.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="48.0" VBox.vgrow="ALWAYS">
               <children>
                  <Button fx:id="btnAceptar" mnemonicParsing="false" onAction="#onActionAceptar" text="Aceptar" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="16.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
