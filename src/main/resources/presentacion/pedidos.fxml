<AnchorPane id="AnchorPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentacion.PedidosController">
   <children>
      <BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnVolver" mnemonicParsing="false" text="Volver" />
                  <Label text="Cliente" />
                  <HBox fillHeight="false" maxWidth="150.0" spacing="10.0">
                     <children>
                        <Label maxWidth="1.7976931348623157E308" text="Nombre:" HBox.hgrow="ALWAYS" />
                        <Label fx:id="txtNombre" alignment="TOP_LEFT" contentDisplay="TOP" maxWidth="1.7976931348623157E308" text="{nombre]" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox fillHeight="false" maxWidth="150.0" spacing="10.0">
                     <children>
                        <Label maxWidth="1.7976931348623157E308" text="Email:" HBox.hgrow="ALWAYS" />
                        <Label fx:id="txtEmail" contentDisplay="RIGHT" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" text="{email}" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </top>
         <center>
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox HBox.hgrow="ALWAYS">
                     <children>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Pedidos">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Label>
                        <TableView fx:id="tablePedidos" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                          <columns>
                            <TableColumn fx:id="columnPedidosID" prefWidth="75.0" text="ID" />
                            <TableColumn fx:id="columnPedidosFechaPedido" prefWidth="75.0" text="Fecha Pedido" />
                              <TableColumn fx:id="columnPedidosFechaRequerida" prefWidth="75.0" text="Fecha Requerida" />
                              <TableColumn fx:id="columnPedidosFechaEnvio" prefWidth="75.0" text="Fecha de Envio" />
                              <TableColumn fx:id="columnPedidosEmail" prefWidth="75.0" text="Email" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox spacing="20.0">
                           <children>
                              <Button fx:id="btnAddPedido" mnemonicParsing="false" text="Añadir" />
                              <Button fx:id="btnModPedido" mnemonicParsing="false" text="Modificar" />
                              <Button fx:id="btnDelPedido" mnemonicParsing="false" text="Eliminar" />
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
                     <children>
                        <Label maxWidth="1.7976931348623157E308" text="Linea de pedidos">
                           <VBox.margin>
                              <Insets bottom="10.0" />
                           </VBox.margin>
                        </Label>
                        <TableView fx:id="tableLineaPedidos" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                          <columns>
                            <TableColumn fx:id="columnLineaPedidosNumeroPedido" prefWidth="75.0" text="Numero Producto" />
                            <TableColumn fx:id="columnLineaPedidosCodigoProducto" prefWidth="75.0" text="Codigo Producto" />
                              <TableColumn fx:id="columnLineaPedidosNombreProducto" prefWidth="75.0" text="Nombre producto" />
                              <TableColumn fx:id="columnLineaPedidosCantidad" prefWidth="75.0" text="Cantidad" />
                              <TableColumn fx:id="columnLineaPedidosPrecio" prefWidth="75.0" text="Precio" />
                              <TableColumn fx:id="columnLineaPedidosNumLinea" prefWidth="75.0" text="Num linea" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox spacing="20.0">
                           <children>
                              <Button fx:id="btnAddLineaPedido" mnemonicParsing="false" text="Añadir" />
                              <Button fx:id="btnModLineaPedido" mnemonicParsing="false" text="Modificar" />
                              <Button fx:id="btnDelLineaPedido" mnemonicParsing="false" text="Eliminar" />
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
               </children>
               <BorderPane.margin>
                  <Insets top="20.0" />
               </BorderPane.margin>
            </HBox>
         </center>
      </BorderPane>
      <TableView layoutX="120.0" layoutY="-200.0" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn prefWidth="75.0" text="C1" />
          <TableColumn prefWidth="75.0" text="C2" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>
